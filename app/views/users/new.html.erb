<%= form_with(model: @user) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %> <br>
    </div>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: 'form-control' %> <br>
    </div>
    <div class="form-group">
      <%= form.label :password %>
      <%= form.text_field :password, class: 'form-control' %> <br>
    </div>
    <%= form.submit "Enviar" ,class: 'btn btn-success' %>
<% end %>